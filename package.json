{
  "name": "dounie-cuisine-pro",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:frontend": "npx vite",
    "dev:backend": "npx tsx watch server/index.ts",
    "dev": "npx npm-run-all --parallel dev:frontend dev:backend",
    "build:frontend": "npx tsc && npx vite build",
    "build:backend": "tsc -p tsconfig.server.json && echo 'Backend build placeholder (actual bundling/transpilation might be needed)'",
    "build": "npm run build:frontend && npm run build:backend",
    "start": "node dist/server/index.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "framer-motion": "^11.2.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lucide-react": "^0.378.0",
    "multer": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.4",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.23.0",
    "sqlite3": "^5.1.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
